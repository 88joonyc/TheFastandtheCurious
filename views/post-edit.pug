form(action='/posts/edit' method='post' class='posts-form')
    input(type='hidden' name='_csrf' value=csrfToken)
    select(name='tagList' required class='select-input')
        //- each tag in tagList
        //- option(value=tag.id)= tag.name
    input(type='text' name='title' value=post.title class='post-input' placeholder='Add a title to your post..')
    textarea(type='textarea' name='description' value=post.description class='post-input-description' placeholder='Write about your post..' )
    img(type='img' name='image' src=post.image class='post-input' placeholder='image file url')
    div(class='post-buttons-container')
        a(href='/' class='post-cancel post-buttons') Cancel
        a(href=`/posts/edit/${post.id}`, type='submit' class='post-buttons post-post') Post
